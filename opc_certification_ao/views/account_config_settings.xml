<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_account_config_settings_inherit_view" model="ir.ui.view">
            <field name="name">view_account_config_settings_inherit_view</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                    <div id="invoicing_settings" position="inside">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="account_adjustments_purchase"/>
                                <field name="account_adjustments_purchase" options="{'no_create_edit': True}"/>
                                <label for="account_adjustments_sale"/>
                                <field name="account_adjustments_sale" options="{'no_create_edit': True}"/>
                            </div>
                        </div>
                    </div>
            </field>
        </record>

    </data>
</odoo>
