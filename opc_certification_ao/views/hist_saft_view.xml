<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- vista do historico -->
        <record id="hist_saft_form" model="ir.ui.view">
            <field name="name">hist_saft_form</field>
            <field name="model">hist.saft</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Histórico SAFT-PT">
                    <field name="data_criacao"/>
                    <field name="data_inicio"/>
                    <field name="data_fim"/>
                    <field name="empresa"/>
                    <field name="nif"/>
                    <field name="num_faturas"/>
                    <field name="valor_credito"/>
                    <field name="valor_debito"/>
                    <field name="user"/>
                    <field name="tipo"/>
                    <field name="state"/>
                    <group col="10" colspan="4">
                        <button name="do_valida" string="Validar" colspan="1" states="nao_validado" type="object"
                                icon="fa-check"/>
                        <button name="do_submete" string="Submeter" colspan="1" states="nao_validado,validado"
                                type="object" icon="fa-hand-o-down"/>
                        <button name="do_nao_valida" string="Voltar a Não Validado" colspan="1"
                                states="submetido,validado" type="object" icon="fa-arrow-circle-left"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="hist_saft_tree" model="ir.ui.view">
            <field name="name">hist_saft_tree</field>
            <field name="model">hist.saft</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Histórico SAFT-PT" create="0">
                    <field name="data_criacao"/>
                    <field name="data_inicio"/>
                    <field name="data_fim"/>
                    <field name="empresa"/>
                    <field name="nif"/>
                    <field name="user"/>
                    <field name="tipo"/>
                    <field name="state"/>
                    <button name="do_valida" string="Validar" colspan="1" states="nao_validado" type="object"
                            icon="fa-check"/>
                    <button name="do_submete" string="Submeter" colspan="1" states="nao_validado,validado" type="object"
                            icon="fa-hand-o-down"/>
                    <button name="do_nao_valida" string="Voltar a Não Validado" colspan="1" states="submetido,validado"
                            type="object" icon="fa-arrow-circle-left"/>
                </tree>
            </field>
        </record>

        <record id="hist_saft_search" model="ir.ui.view">
            <field name="name">hist.saft.search</field>
            <field name="model">hist.saft</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Procurar">
                    <group col="10" colspan="4">
                        <field name="data_criacao"/>
                        <field name="user"/>
                        <field name="tipo"/>
                        <field name="state"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="hist_saft_action" model="ir.actions.act_window">
            <field name="name">Histórico</field>
            <field name="res_model">hist.saft</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Histórico de exportações de Safts.
              </p>
            </field>
            <field name="context">{}</field>
        </record>

    </data>
</odoo>
